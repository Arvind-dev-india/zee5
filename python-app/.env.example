# Application Configuration
APP_NAME=ZEE5 Streaming Service
APP_VERSION=2.0.0
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=5052
# IMPORTANT: For network access from other devices, set this to your server's IP
# Examples:
#   SERVER_URL=http://192.168.1.100:5052  (for LAN access)
#   SERVER_URL=http://your-domain.com:5052  (for public access)
SERVER_URL=http://0.0.0.0:5052

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
USE_REDIS=true

# Cache Configuration
CACHE_DIR=data/cache
COOKIE_CACHE_TTL=43000

# Cookie Manager Configuration
COOKIE_POOL_SIZE=3
COOKIE_REFRESH_INTERVAL=36000
COOKIE_MIN_REMAINING=3600

# Playwright Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=60000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=
LOG_JSON=false

# Security
ALLOWED_ORIGINS=*

# Feature Flags
ENABLE_METRICS=false
ENABLE_DEBUG_ROUTES=true
